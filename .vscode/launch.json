  "version": "0.2.0",
  "configurations": [
    {
      "type": "node", //  type of debugger - node for the built-in Node debugger.
      "request": "launch",
      "name": "Launch Progrwith auto restart",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\server.js", // file to run when launching the debugger.
      "restart": true,
      "runtimeExecutable": "nodemon",
      "console": "integratedTerminal" // kind of console to use.
    }
  ]
}
